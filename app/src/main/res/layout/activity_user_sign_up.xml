<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityUserSignUp">

    <EditText
        android:id="@+id/user_register_edit_name"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        />

    <EditText
        android:id="@+id/user_register_edit_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/user_register_edit_name"
        android:hint="Enter Number"
        />
    <EditText
        android:id="@+id/user_register_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/user_register_edit_number"
        android:hint="Enter Password"
        />
    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_register_edit_password"
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue" />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_below="@id/btn_continue"
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in" />

</RelativeLayout>